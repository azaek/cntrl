{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cntrl Bridge",
  "version": "0.0.1",
  "identifier": "com.azaek.cntrl-bridge",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cntrl Bridge",
        "width": 380,
        "height": 626,
        "resizable": false,
        "backgroundColor": "#202022",
        "decorations": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "dmg", "app"],
    "publisher": "azaek",
    "copyright": "Copyright Â© 2026 azaek",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerHooks": "windows/hooks.nsh"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/azaek/cntrl/updates/updates/latest-stable.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBMEQwQjJDNUVDQjRFMjAKUldRZ1RzdGVMQXNOMnZ5TkZUTHBTZFNTMzY4eHhodVVtb0VkaU9vbWw1QzdFSXhIeGN5blVGM3gK"
    }
  }
}
